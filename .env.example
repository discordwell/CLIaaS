# ============================================================================
# CLIaaS Environment Variables
# Copy to .env and fill in the values for your deployment.
# ============================================================================

# ── Core ─────────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=3101
HOST=0.0.0.0
NEXT_PUBLIC_APP_NAME=CLIaaS
NEXT_PUBLIC_BASE_URL=https://cliaas.com

# Persistent JSONL data directory (file-based store when no DATABASE_URL)
# Default: /tmp/cliaas-demo
CLIAAS_DATA_DIR=/home/ubuntu/cliaas-data

# Multi-tenant identifiers (defaults to "default")
CLIAAS_TENANT=default
CLIAAS_WORKSPACE=default

# ── Auth ─────────────────────────────────────────────────────────────────
# REQUIRED in production. Used to sign JWT session tokens.
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# ── Database ─────────────────────────────────────────────────────────────
# PostgreSQL connection string. When unset, the app runs in demo/file mode.
DATABASE_URL=

# Optional: RLS-compatible connection using cliaas_app role (non-superuser).
# When set, application queries use this connection for Row-Level Security.
# When unset, falls back to DATABASE_URL.
DATABASE_APP_ROLE_URL=

# Separate pgvector database for RAG embeddings/search.
# When unset, RAG uses DATABASE_URL. Set this to isolate vector storage
# on a dedicated Postgres instance with pgvector enabled.
RAG_DATABASE_URL=

# ── AI / LLM Providers ──────────────────────────────────────────────────
# At least one key is required for AI features (agent, routing, insights, QA).
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ── Redis (Job Queue) ────────────────────────────────────────────────────
# Redis connection string for BullMQ job queues. When unset, background
# jobs fall back to inline processing (fire-and-forget).
REDIS_URL=

# ── Sentry (Error Tracking) ─────────────────────────────────────────────
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ── Logging ──────────────────────────────────────────────────────────────
# Pino log level: trace, debug, info, warn, error, fatal (default: info)
LOG_LEVEL=info

# ── Email (SMTP) ─────────────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ── Twilio (SMS & WhatsApp channel) ──────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_NUMBER=

# ── Meta (Facebook & Instagram channels) ─────────────────────────────────
META_PAGE_ACCESS_TOKEN=
META_APP_SECRET=
META_VERIFY_TOKEN=
META_PAGE_ID=

# ── Twitter / X ──────────────────────────────────────────────────────────
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
# Account Activity API environment name (default: production)
TWITTER_ENV_NAME=production

# ── Zendesk ──────────────────────────────────────────────────────────────
ZENDESK_SUBDOMAIN=
ZENDESK_EMAIL=
ZENDESK_TOKEN=
ZENDESK_WEBHOOK_SECRET=

# ── Freshdesk ────────────────────────────────────────────────────────────
FRESHDESK_SUBDOMAIN=
FRESHDESK_API_KEY=

# ── Intercom ─────────────────────────────────────────────────────────────
INTERCOM_ACCESS_TOKEN=
# Admin ID for conversation assignment (default: 0)
INTERCOM_ADMIN_ID=

# ── Help Scout ───────────────────────────────────────────────────────────
HELPSCOUT_APP_ID=
HELPSCOUT_APP_SECRET=
HELPSCOUT_MAILBOX_ID=

# ── HelpCrunch ───────────────────────────────────────────────────────────
HELPCRUNCH_API_KEY=

# ── Groove ───────────────────────────────────────────────────────────────
GROOVE_API_TOKEN=

# ── HubSpot ──────────────────────────────────────────────────────────────
HUBSPOT_ACCESS_TOKEN=

# ── Zoho Desk ────────────────────────────────────────────────────────────
ZOHO_DESK_ORG_ID=
ZOHO_DESK_ACCESS_TOKEN=

# ── Kayako Cloud ─────────────────────────────────────────────────────────
KAYAKO_DOMAIN=
KAYAKO_EMAIL=
